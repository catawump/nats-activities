@using DefaultProject.Models
@model User

<h1>Welcome to the Dojo Activity Center!</h1>

<h1>Login</h1>
<form action="login" method="POST">

  @{
        if(@TempData["error"] != null){
            <p style="color: red;">@TempData["error"]</p>
        }
    }

    <p><span asp-validation-for="email" style="color: red;" ></span></p>
    <label asp-for="email">Email: <input type="email" name="CheckEmail" pattern=".{1,}"   required title="Required!">
    </label>
    <br>
    
    <p><span asp-validation-for="password" style="color: red;"></span></p>
    <label asp-for="password">Password: <input type="password" name="CheckPassword" pattern=".{1,}"   required title="Required!">
    </label>
    <br><br>
    <input type="submit" value="Login" class="btn btn-primary">

</form>

<br><br>

<h2>Register</h2>
<form  action="create" method="POST">
  <p><span asp-validation-for="first_name" style="color: red;"></span></p>
    <label asp-for="first_name">First Name: <input type="text" name="first_name">
    </label>
    <br>

      <p><span asp-validation-for="last_name" style="color: red;"></span></p>
    <label asp-for="last_name">Last Name: <input type="text" name="last_name">
    </label>
    <br>

     <p><span asp-validation-for="email" style="color: red;"></span></p>
    <label asp-for="email">Email: <input type="email" name="email">
    </label>
    <br>

    
    <p><span asp-validation-for="password" style="color: red;"></span></p>
    <label asp-for="password">Password: <input type="password" name="password">
    </label>
    <br>

    <p><span asp-validation-for="confirm_password" style="color: red;"></span></p>
    <label asp-for="confirm_password">Repeat Password: <input type="password" name="confirm_password">
    </label>
    <br><br>
    <input type="submit" value="Register" class="btn btn-primary">

</form>